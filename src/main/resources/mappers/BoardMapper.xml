<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.board6.application.BoardMapper">
    <insert id="save">
        INSERT INTO board <!--mySQL에서는 INTO를 안넣어도 되지만 오라클에서는 에러터짐 -->
            SET title = #{title},
                contents = #{contents};

        <!-- INSERT문 정석
             INSERT INTO board
             ( title, contents )
             VALUES
             ( #{title}, #{contents} )
        -->
    </insert>
</mapper>